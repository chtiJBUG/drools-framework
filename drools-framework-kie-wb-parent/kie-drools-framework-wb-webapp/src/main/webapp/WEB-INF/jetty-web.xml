<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN"
    "http://jetty.mortbay.org/configure.dtd">
<Configure id="sample-weld" class="org.mortbay.jetty.webapp.WebAppContext">

  <!-- Bug fix for Jetty to properly handle login config in a per-project setup -->
  <Set artifactId="serverClasses">
    <Array type="java.lang.String">
      <Item>-org.mortbay.jetty.plus.jaas.</Item>
      <Item>org.mortbay.jetty</Item>
      <Item>org.slf4j.</Item>
    </Array>
  </Set>

  <Get artifactId="securityHandler">
    <Set artifactId="userRealm">
      <New class="org.mortbay.jetty.plus.jaas.JAASUserRealm">
        <Set artifactId="artifactId">ApplicationRealm</Set>
        <Set artifactId="LoginModuleName">ApplicationRealm</Set>
      </New>
    </Set>
  </Get>

  <Array id="plusConfig" type="java.lang.String">
    <Item>org.mortbay.jetty.webapp.WebInfConfiguration</Item>
    <Item>org.mortbay.jetty.plus.webapp.EnvConfiguration</Item>
    <Item>org.mortbay.jetty.plus.webapp.Configuration</Item>
    <Item>org.mortbay.jetty.webapp.JettyWebXmlConfiguration</Item>
  </Array>

  <Call artifactId="getConfiguration" class="bitronix.tm.TransactionManagerServices">
    <Set artifactId="serverId">jetty-btm-node0</Set>
    <Set artifactId="logPart1Filename">
      <SystemProperty artifactId="jetty.home" default="."/>
      btm1.tlog
    </Set>
    <Set artifactId="logPart2Filename">
      <SystemProperty artifactId="jetty.home" default="."/>
      btm2.tlog
    </Set>
  </Call>

  <New id="tx" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>java:comp/UserTransaction</Arg>
    <Arg>
      <Call artifactId="getTransactionManager" class="bitronix.tm.TransactionManagerServices"/>
    </Arg>
  </New>

  <New id="tx" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>java:comp/TransactionManager</Arg>
    <Arg>
      <Call artifactId="getTransactionManager" class="bitronix.tm.TransactionManagerServices"/>
    </Arg>
  </New>

  <New id="txsyncreg" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>java:comp/TransactionSynchronizationRegistry</Arg>
    <Arg>
      <Call artifactId="getTransactionSynchronizationRegistry" class="bitronix.tm.TransactionManagerServices"/>
    </Arg>
  </New>

  <New id="jbpmConsoleDS" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>jdbc/jbpmConsoleDS</Arg>
    <Arg>
      <New class="bitronix.tm.resource.jdbc.PoolingDataSource">
        <Set artifactId="uniqueName">jbpmConsoleDS</Set>
        <Set artifactId="className">org.h2.jdbcx.JdbcDataSource</Set>
        <Set artifactId="maxPoolSize">50</Set>
        <Set artifactId="allowLocalTransactions">true</Set>
        <Get artifactId="driverProperties">
          <Put artifactId="user">sa</Put>
          <Put artifactId="password">sasa</Put>
          <Put artifactId="URL">jdbc:h2:~/jbpm-console-ng</Put>
        </Get>
        <Call artifactId="init"/>
      </New>
    </Arg>
  </New>

  <New id="BeanManager" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>java:comp/BeanManager</Arg>
    <Arg>
      <New class="javax.naming.Reference">
        <Arg>javax.enterprise.inject.spi.BeanManager</Arg>
        <Arg>org.jboss.weld.resources.ManagerObjectFactory</Arg>
        <Arg/>
      </New>
    </Arg>
  </New>

  <New id="emf" class="org.mortbay.jetty.plus.naming.Resource">
    <Arg>jBPMEMF</Arg>
    <Arg>
      <Call artifactId="createEntityManagerFactory" class="javax.persistence.Persistence">
        <Arg>org.jbpm.domain</Arg>
      </Call>
    </Arg>
  </New>

</Configure>
